{
  "name": "build-sizes",
  "version": "3.2.0",
  "description": "A small script that provides build sizes to assist with optimization",
  "homepage": "https://benelan.github.io/build-sizes",
  "keywords": [
    "metrics",
    "size",
    "build",
    "performance",
    "bundle",
    "optimization",
    "automation"
  ],
  "author": {
    "name": "Ben Elan",
    "url": "https://benelan.dev"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "export": {
    ".": "./dist/index.js",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "bin": {
    "build-sizes": "./dist/cli.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "npx esbuild ./src/index.js --outfile=./dist/index.cjs --bundle --format=cjs --minify --platform=node",
    "build:esm": "npx esbuild ./src/index.js ./src/cli.js --outdir=./dist --bundle --format=esm --minify --platform=node",
    "docs": "npx jsdoc src/index.js -r README.md -d docs",
    "link": "npm run build && npm unlink -g build-sizes && npm link",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prepublish": "npm run lint:fix && npm run build",
    "test": "echo \"no test specified\""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benelan/build-sizes.git"
  },
  "bugs": {
    "url": "https://github.com/benelan/build-sizes/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "engineStrict": true,
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/dist",
      "/docs"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-unneeded-ternary": "error",
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-cond-assign": [
        "error",
        "always"
      ]
    }
  }
}
