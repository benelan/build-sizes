{
  "name": "build-sizes",
  "version": "2.4.0",
  "description": "A small script that provides build sizes to assist with optimization",
  "homepage": "https://benelan.github.io/build-sizes",
  "keywords": [
    "metrics",
    "size",
    "build",
    "performance",
    "bundle"
  ],
  "author": {
    "name": "Ben Elan",
    "url": "https://benelan.dev"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "export": {
    ".": "./dist/index.js",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "bin": {
    "build-sizes": "./dist/cli.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build:cli": "esbuild --bundle ./src/cli.js --outfile=./dist/cli.js --format=esm --minify --platform=node",
    "build:esm": "esbuild --bundle ./src/index.js --outfile=./dist/index.js --format=esm --minify --platform=node",
    "build:cjs": "esbuild --bundle ./src/index.js --outfile=./dist/index.cjs --format=cjs --minify --platform=node",
    "build": "npm run build:esm && npm run build:cjs && npm run build:cli",
    "prepublish": "npm run build",
    "test": "echo \"no test specified\"",
    "docs": "npx jsdoc index.js -r README.md -d docs"
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benelan/build-sizes.git"
  },
  "bugs": {
    "url": "https://github.com/benelan/build-sizes/issues"
  },
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.23"
  }
}
